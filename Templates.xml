                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="name" inherits="GameFontNormalHuge2">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-222"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="role" inherits="GameFontNormalLarge">
