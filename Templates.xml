                        <Anchor point="TOP" x="0" y="-256"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="description" inherits="GameFontNormal">
                    <Size x="220" y="80"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-300"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="abilityHeader" inherits="GameFontNormal" text="Sample Abilities">
